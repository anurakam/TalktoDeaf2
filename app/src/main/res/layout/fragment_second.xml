<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="project.talktodeaf.wordgame.GameWordFirstFragment$PlaceholderFragment">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/linear">
        <com.cengalabs.flatui.views.FlatTextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="ข้อ 2"
            android:textSize="30dp"
            android:layout_margin="20dp"
            flatui:fl_fontFamily="Waffle"
            flatui:fl_fontWeight="regular"
            flatui:fl_fontExtension="otf"
            flatui:fl_textColor="fl_darker" />
        <VideoView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/videoView"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            />

        <com.cengalabs.flatui.views.FlatCheckBox
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#0000"
            android:text="Choice 1"
            android:textSize="30dp"
            android:layout_margin="5dip"
            flatui:fl_size="30dip"
            flatui:fl_theme="@array/dark"
            android:orientation="vertical"
            flatui:fl_fontFamily="Waffle"
            flatui:fl_fontWeight="regular"
            flatui:fl_fontExtension="otf"/>

        <com.cengalabs.flatui.views.FlatCheckBox
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#0000"
            android:text="Choice 2"
            android:textSize="30dp"
            android:layout_margin="5dip"
            flatui:fl_size="30dip"
            flatui:fl_theme="@array/dark"
            flatui:fl_fontFamily="Waffle"
            flatui:fl_fontWeight="regular"
            flatui:fl_fontExtension="otf"/>

    </LinearLayout>




</LinearLayout>
